public class Circle
{
   private double radius;
   private double diameter;
   private double area;

   public Circle()
   {
      radius=1;
      diameter=2*radius;
      area=Math.PI*radius*radius;
   }

   public void setradius(double in)
   {
      radius=in;
      diameter=2*radius;
      area=Math.PI*radius*radius;
   }

   public double getRadius()
   {
      return radius;
   }
   
    public double getDiameter()
   {
      return diameter;
   }
   
    public double getArea()
   {
      return area;
   }


}
